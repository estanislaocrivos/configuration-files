{
    "version": 4,
    "configurations": [
        {
            "name": "ARM GCC (Cortex-M)",
            "compilerPath": "/usr/bin/arm-none-eabi-gcc",
            "compilerArgs": [
                "-mcpu=cortex-m4",
                "-mthumb",
                "-mfloat-abi=hard",
                "-mfpu=fpv4-sp-d16"
            ],
            "intelliSenseMode": "gcc-arm",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/inc",
                "${workspaceFolder}/src",
                "${workspaceFolder}/Drivers/**",
                "${workspaceFolder}/CMSIS/**"
            ],
            "defines": [
                "DEBUG",
                "USE_HAL_DRIVER",
                "STM32F4xx",
                "STM32F407xx"
            ],
            "cStandard": "c99",
            "cppStandard": "c++17",
            "configurationProvider": "ms-vscode.cmake-tools",
            "browse": {
                "path": [
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        },
        {
            "name": "Native GCC (Host)",
            "compilerPath": "/usr/bin/gcc",
            "intelliSenseMode": "gcc-x64",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/inc",
                "${workspaceFolder}/src",
                "${workspaceFolder}/test",
                "${workspaceFolder}/test/support"
            ],
            "defines": [
                "DEBUG",
                "TEST",
                "UNITY_INCLUDE_CONFIG_H"
            ],
            "cStandard": "c99",
            "cppStandard": "c++17",
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Clangd",
            "compilerPath": "/usr/bin/clang",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "cStandard": "c99",
            "cppStandard": "c++17",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ]
}
