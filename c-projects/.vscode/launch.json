{
    "version": "0.2.0",
    "configurations": [
        // OpenOCD + ST-Link (más común para STM32)
        {
            "name": "Debug (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "preLaunchTask": "Build",
            "preRestartCommands": [
                "load",
                "enable breakpoint",
                "monitor reset init"
            ],
            "postRestartCommands": [],
            "device": "STM32F407VG",
            "interface": "swd",
            "rtos": "FreeRTOS",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        },
        {
            "name": "Attach (OpenOCD)",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "device": "STM32F407VG",
            "interface": "swd"
        },
        // J-Link
        {
            "name": "Debug (J-Link)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "device": "STM32F407VG",
            "interface": "swd",
            "serialNumber": "",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "preLaunchTask": "Build",
            "rtos": "FreeRTOS",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "RTT Console"
                    }
                ]
            }
        },
        // ST-Link (usando st-util)
        {
            "name": "Debug (ST-Util)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "stutil",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "device": "STM32F407VG",
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "runToEntryPoint": "main",
            "preLaunchTask": "Build"
        },
        // QEMU (para testing sin hardware)
        {
            "name": "Debug (QEMU)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "qemu",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "cpu": "cortex-m4",
            "machine": "netduinoplus2",
            "preLaunchTask": "Build"
        },
        // PyOCD (alternativa open-source)
        {
            "name": "Debug (PyOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "pyocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "targetId": "stm32f407vg",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "preLaunchTask": "Build"
        },
        // Native (para tests unitarios en host)
        {
            "name": "Debug Tests (Native)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/test_runner",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Tests"
        },
        // GDB Server externo (genérico)
        {
            "name": "Debug (External GDB Server)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "external",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "gdbTarget": "localhost:3333",
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "runToEntryPoint": "main",
            "preLaunchTask": "Build"
        }
    ]
}
